<h1>Edit task</h1>

  </br>
  <%= form_for :task, html: {class: 'form-inline'}, :method => 'patch', :url => { :action => 'update' } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, :class => "form-control input-lg", :placeholder => "New todo"%>
  </div> &emsp;
  <div class="form-group">
    <%= f.date_field :due_date, :class => "form-control input-lg" %>
  </div> &emsp;
  <div class="input-group">
  <%= f.submit class: 'btn btn-success btn-lg' %>
  </div>
  <% end %>
